<div class="admin-list detail">

    {{>admin_header}}
    {{>adminNavigation}}
    <div class="content">
        <h2>Destination Detail</h2>
        <span class="create"><a href="/admin-destination/destinations">
                < Back</a></span>

        <div class="detail">
            <div class="left">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/file/destinations/{{firstImage}}" alt="First slide">
                        </div>
                        {{#each d.image}}
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/file/destinations/{{this}}" alt="Second slide">
                        </div>
                        {{/each}}
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
            <div class="right">
                <h4>{{d.name}}</h4>
                <div class="button">
                    <div>
                        <form action="/admin-destination/destinations/edit/{{d.id}}" method="get">
                            <button class="but">EDIT</button>
                        </form>
                    </div>
                    <div>
                        <form action="/admin-destination/destinations/remove/{{d.id}}" method="post">
                            <button class="but del">DELETE</button>
                        </form>
                    </div>
                </div>
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Visa</th>
                            <td>{{d.visa}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Country</th>
                            <td>{{d.country}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Language</th>
                            <td>{{d.language}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Currency</th>
                            <td>{{d.currency}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Area</th>
                            <td>{{d.area}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Creator</th>
                            <td>{{d.creator.name}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Status</th>
                            <td>{{d.display}}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{d.description}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>


        </div>
        <div class="tours">
            <h4>List tours</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tour name</th>
                        <th scope="col">Number of Tour Departure</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each d.tours}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td>0</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
</div>

